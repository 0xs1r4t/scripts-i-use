[user@control]
sudo yum install epel-release ansible -y

sudo useradd ansible
ssh workstation

[user@workstation]
sudo useradd ansible
sudo passwd ansible
logout

[user@control]
sudo su - ansible

[ansible@control]
ssh-keygen
ssh-copy-id workstation
ssh workstation # no passwd required

[ansible@workstation]
logout

[ansible@control]
ssh user@workstation

[user@workstation]
sudo visudo # see visudo.example

logout

[ansible@control]
pwd
(/home/ansible)

vim inventory
vim git-setup.yml

ansible-playbook -i inventory git-setup.yml

